<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for Railway (no file logging in production) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Prevent memory buildup in console appender -->
        <immediateFlush>true</immediateFlush>
    </appender>

    <!-- Conditional file appender for local development only -->
    <springProfile name="!railway">
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/aquarium-api.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/aquarium-api.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>3</maxHistory>
                <totalSizeCap>50MB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <!-- Application logs - minimal for Railway production -->
    <logger name="nl.hu.bep" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="nl.hu.bep.config" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="nl.hu.bep.presentation.exception.ExceptionMappers" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Jersey logs - minimal -->
    <logger name="org.glassfish.jersey" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Hibernate logs - minimal for production memory optimization -->
    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="org.hibernate.SQL" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- HikariCP logs -->
    <logger name="com.zaxxer.hikari" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Tomcat logs -->
    <logger name="org.apache.catalina" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    <logger name="org.apache.tomcat" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- PostgreSQL driver logs -->
    <logger name="org.postgresql" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- Root logger - minimal level for Railway -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
        <!-- Only add file appender in local development -->
        <springProfile name="!railway">
            <appender-ref ref="FILE" />
        </springProfile>
    </root>
</configuration> 